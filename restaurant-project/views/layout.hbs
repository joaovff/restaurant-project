   {{>header passThisToView = user}}
    <div class="fab">
      <button class="main">
      </button>
      <ul>
          <li>
          <label for="option1">Create a QR</label>
          <button id="option1" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#staticBackdrop">
            <a class="no-decoration"> <img src="/images/qr.png" class="qr-icon" height="30"></a>
          </button>
        </li>

        <li>
          <label for="option2">Get in touch</label>
          <button id="option2">
            <a class="no-decoration" href="tel:+3519999999">ðŸ“ž</a>
          </button>
        </li>

        <li>
          <label for="option3">Book a table</label>
          <button
            id="option3"
            data-bs-toggle="modal"
            data-bs-target="#exampleModal"
          >
            ðŸ“‘
          </button>
        </li>

      
      </ul>
    </div>

    <!-- Modal -->
    <div
      class="modal fade"
      id="exampleModal"
      tabindex="-1"
      aria-labelledby="exampleModalLabel"
      aria-hidden="true"
    >
      <div class="modal-dialog">
        <div class="modal-content">
          <div class="modal-header">
            <h1 class="modal-title fs-5" id="exampleModalLabel">Book a table</h1>
            <button
              type="button"
              class="btn-close"
              data-bs-dismiss="modal"
              aria-label="Close"
            ></button>
          </div>
          <div class="modal-body">
            <form
              action="/send-mail"
              method="post"
            >
              Name:<br />
              <input type="text" name="name" /><br />
              Email:<br />
              <input type="text" name="email" /><br />
              Table for:
              <br />
              <input type="number" name="people" min="1" max="10" />
              <br />
              Phone:
              <br />
              <input type="tel" name="phone" /><br />
              Date:
              <br />
              <input type="date" name="date" /><br />
              Time:
              <br />
              <select class="time" name="time">
                <option></option>
                <option value="19:00">18:30</option>
                <option value="19:00">18:45</option>
                <option value="19:00">19:00</option>
                <option value="19:00">19:00</option>
                <option value="19:15">19:15</option>
                <option value="19:30">19:30</option>
                <option value="19:45">19:45</option>
                <option value="20:00">20:00</option>
                <option value="20:15">20:15</option>
                <option value="20:30">20:30</option>
                <option value="20:45">20:45</option>
                <option value="21:00">21:00</option>
                <option value="21:15">21:15</option>
                <option value="21:30">21:30</option>

              </select>
              <br />
              <button
                type="button"
                class="btn btn-secondary send-btn"
                data-bs-dismiss="modal"
              >Close</button>
              <button type="submit" class="btn btn-primary table-submit">Send</button>
            </form>
          </div>
          <div class="modal-footer">

          </div>
        </div>
      </div>
    </div>
    

<!-- Modal -->
<div class="modal fade" id="staticBackdrop" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h1 class="modal-title fs-5" id="staticBackdropLabel">Generete a QR Code</h1>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body qr-body">
        URL:
        <br>
        <textarea name="link" id="link" cols="40" rows="3" placeholder="https://example.com/something"></textarea>
        <img id="QRCodeImage"><br>
        <div>
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Dismiss</button>
        <button onclick="QRCode()" class="btn btn-primary table-submit">Generate</button>
        </div>
      </div>
    </div>
  </div>
</div>
    

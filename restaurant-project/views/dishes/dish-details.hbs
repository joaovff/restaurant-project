<div class="testing container">
  {{name}}
  <img src="{{image}}" alt="" height="600" />
  {{ingredients}}

  <form class="rate" action="/dishes/{{_id}}" method="post">
    <input type="radio" id="star5" name="stars" value="5" />
    <label for="star5" title="Awesome!!" onclick="showGoodComments()">5 stars</label>

    <input type="radio" id="star4" name="stars" value="4" />
    <label for="star4" title="Very Good!" onclick="showGoodComments()">4 stars</label>

    <input type="radio" id="star3" name="stars" value="3" />
    <label for="star3" title="Ok" onclick="showBadComments()">3 stars</label>

    <input type="radio" id="star2" name="stars" value="2" />
    <label for="star2" title="Bad" onclick="showBadComments()">2 stars</label>

    <input type="radio" id="star1" name="stars" value="1" />
    <label for="star1" title="Very bad!" onclick="showBadComments()">1 star</label>
    <br />
    <br />

    <select
      class="form-select"
      id="showBad"
      aria-label="Default select example"
      style="display:none"
      name="comments"
    >
      <option></option>
      <option value="1">Wait time</option>
      <option value="2">Temperature</option>
      <option value="3">Missing items</option>
    </select>

    <select
      class="form-select"
      id="showGood"
      aria-label="Default select example"
      style="display:none"
      name="comments"
    >
      <option></option>
      <option value="4">4</option>
      <option value="5">5</option>
      <option value="6">6</option>
    </select>

    <br />
    <button type="submit">Submit</button>
  </form>

</div>
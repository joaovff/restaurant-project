<div class="container-dashboard">
  <nav class="navbar-dashboard">
    <div class="nav_icon" onclick="toggleSidebar()">
      <i class="fa fa-bars" aria-hidden="true"></i>
    </div>
    <div class="navbar__right"></div>
  </nav>

  <main>
    <div class="main__container">

      <div class="main__title">
        <div class="main__greeting">
          <h1>Create a dish</h1>
          <p>Here you can create a new dish.</p>
        </div>
      </div>

      <div class="main__cards">

      </div>
      <form
        action="/manager/create"
        method="post"
        enctype="multipart/form-data"
        class="form-dish-create"
      >
        <label class="form-label">
          Name
          <input
            class="form-control"
            type="text"
            name="name"
            placeholder=""
            required
          />
        </label>

        <label class="form-label">
          Image
          <input class="form-control" type="file" name="image" required />
        </label>

        <label class="form-label">
          Ingredients
          <input class="form-control" type="text" name="ingredients" required />
        </label>

        <label class="form-label">
          Price
          <input
            type="number"
            name="price"
            required
            placeholder="0.00"
            step="0.01"
            id="totalAmt"
            class="form-control"
          />
        </label>

        <label for="type" class="form-label">Type</label>
        <select
          name="type"
          id="type"
          class="form-control"
          style="width: 230px;"
          required
        >
          <option disabled selected></option>
          <option value="starter">Starter</option>
          <option value="main">Main</option>
          <option value="dessert">Dessert</option>
        </select>
        <button class="btn btn-dark create-btn" type="submit">Create</button>
      </form>

    </div>
  </main>

  <div id="sidebar">
    <div class="sidebar__title">
      <div class="sidebar__img">
        <img src="/images/logo.png" alt="logo" />
        <h1>{{user.username}}</h1>
      </div>
      <i
        onclick="closeSidebar()"
        class="fa fa-times"
        id="sidebarIcon"
        aria-hidden="true"
      ></i>
    </div>

    <div class="sidebar__menu">
      <div class="sidebar__link active_menu_link">
        <i class="fa fa-home"></i>
      </div>
      <hr style="color: white;" />
      <h2>
        <a
          href="/manager"
          style="text-decoration: none; color:#d3d7da;px;"
        >Management Area</a>
      </h2>
      <div class="sidebar-link">
        <i class="fa fa-user-secret" aria-hidden="true"></i>
        <a href="/manager/ratings-average">Ratings Average</a>
      </div>
      <div class="sidebar-link">
        <i class="fa fa-archive"></i>
        <a href="#" class="disabled">Comments received</a>
      </div>
      <div class="sidebar-link">
        <i class="fa fa-building-o"></i>
        <a href="/manager/create" style="color: white">Create a dish</a>
      </div>
      <div class="sidebar-link">
        <i class="fa fa-wrench"></i>
        <a href="/manager/edit">Edit a dish</a>
      </div>
    </div>
  </div>
</div>

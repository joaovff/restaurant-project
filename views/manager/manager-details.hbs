<div class="container-dashboard">
  <nav class="navbar-dashboard">
    <a href="/manager/edit"><img src="/images/back.png" height="20px" /></a>
    <div class="nav_icon" onclick="toggleSidebar()">
      <i class="fa fa-bars" aria-hidden="true"></i>
    </div>
    <div class="navbar__right"></div>
  </nav>

  <main>
    <div class="main__container">

      <div class="main__title">
        <div class="main__greeting">
          <h1>Editing: {{name}}</h1>
        </div>
      </div>

      <div class="main__cards margin-to-cards">
        <form
          action="/manager/edit/{{_id}}"
          method="post"
          enctype="multipart/form-data"
          class="form-dish-create"
        >
          <label class="form-label">Name
            <input
              class="form-control"
              type="text"
              name="name"
              value="{{name}}"
            />
          </label>

          <label class="form-label">
            Image
            <input class="form-control" type="file" name="image" />
          </label>

          <label class="form-label">
            Description
            <input
              class="form-control"
              type="text"
              name="ingredients"
              value="{{ingredients}}"
            />
          </label>

          <label class="form-label">
            Type
            <select name="type" id="type" class="form-control" required>
              <option disabled selected></option>
              <option value="starter">Starter</option>
              <option value="main">Main</option>
              <option value="dessert">Dessert</option>
            </select>
          </label>

          <label class="form-label">
            Price
            <input
              type="number"
              name="price"
              id="price"
              step="0.01"
              id="totalAmt"
              value="{{price}}"
              class="form-control"
            />
          </label>

          <div style="display: flex;">
            <button class="btn btn-dark create-btn" style="margin-right: 10%" type="submit">Edit</button>
        </form>
         <form action="/manager/delete/{{_id}}" method="post">
            <button class="btn btn-dark delete-btn" type="submit">Delete</button>
          </form>
        </div>
      </div>
    </div>
  </main>

  <div id="sidebar">
    <div class="sidebar__title">
      <div class="sidebar__img">
        <img src="/images/logo.png" alt="logo" />
        <h1>{{user.username}}</h1>
      </div>
      <i
        onclick="closeSidebar()"
        class="fa fa-times"
        id="sidebarIcon"
        aria-hidden="true"
      ></i>
    </div>

    <div class="sidebar__menu">
      <div class="sidebar__link active_menu_link">
        <i class="fa fa-home"></i>
      </div>
      <hr style="color: white;" />
      <h2>
        <a
          href="/manager"
          style="text-decoration: none; color:#d3d7da;px;"
        >Management Area</a>
      </h2>
      <div class="sidebar-link">
        <i class="fa fa-user-secret" aria-hidden="true"></i>
        <a href="/manager/ratings-average">Ratings Average</a>
      </div>
      <div class="sidebar-link">
        <i class="fa fa-building-o"></i>
        <a href="/manager/create">Create a dish</a>
      </div>
      <div class="sidebar-link">
        <i class="fa fa-wrench"></i>
        <a href="/manager/edit" style="color: white;">Edit a dish</a>
      </div>
    </div>
  </div>
</div>


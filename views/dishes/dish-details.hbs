    <input
      style="display: none;"
      type="radio"
      id="star3"
      name="stars"
      value="3"
    />np
    <label for="star3" title="Ok" onclick="show()">3 stars</label>

    <input
      style="display: none;"
      type="radio"
      id="star2"
      name="stars"
      value="2"
    />
    
    <label for="star2" title="Bad" onclick="show()">2 stars</label>

